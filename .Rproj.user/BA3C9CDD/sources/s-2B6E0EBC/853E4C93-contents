sidebarPanel(width = 4,
             tabsetPanel(
               tabPanel("Prevalence", 
                        sliderInput(inputId = "PriorMetric", 
                                    label = paste("Specify your prior belief about the",input$ID_MeanMedianMode,"",input$ID_TrueApp,": "), 
                                    min=0, max=1, value=0.6,step = 0.01),
                        sliderInput(inputId = "Percentile1", 
                                    label = paste("Specify the level of confidence that the true value of the",input$ID_MeanMedianMode,"is greater or lower than the percentile.value: "),
                                    min=0, max=1, value=0.95,step = 0.01),
                        uiOutput("sliders_fb"),
                        radioButtons(inputId = "lower.value", 
                                     label=paste("Is the percentile  the upper limit of the",input$ID_MeanMedianMode,"?"), choices=c("TRUE","FALSE"), 
                                     selected="FALSE",inline = T)
               ),
               tabPanel("Sensitivity",  
                        h3("Set a sensitivity prior"),
                        sliderInput(inputId = "PriorMetric_SE", 
                                    label = paste("Specify your prior belief about the Sensitivity: "), 
                                    min=0, max=1, value=0.6,step = 0.01),
                        sliderInput(inputId = "Percentile1_SE", 
                                    label = paste("Specify the level of confidence that the true value of the",input$ID_MeanMedianMode,"is greater or lower than the percentile.value: "),
                                    min=0, max=1, value=0.95,step = 0.01),
                        uiOutput("sliders_fb_SE"),
                        radioButtons(inputId = "lower.value_SE", 
                                     label=paste("Is the percentile  the upper limit of the",input$ID_MeanMedianMode,"?"), choices=c("TRUE","FALSE"), 
                                     selected="FALSE",inline = T)
               ),
               tabPanel("Specificity",             
                        sliderInput(inputId = "PriorMetric_SP", 
                                    label = paste("Specify your prior belief about the Specificity: "), 
                                    min=0, max=1, value=0.6,step = 0.01),
                        sliderInput(inputId = "Percentile1_SP", 
                                    label = paste("Specify the level of confidence that the true value of the",input$ID_MeanMedianMode,"is greater or lower than the percentile.value: "),
                                    min=0, max=1, value=0.95,step = 0.01),
                        uiOutput("sliders_fb_SP"),
                        radioButtons(inputId = "lower.value_SP", 
                                     label=paste("Is the percentile  the upper limit of the",input$ID_MeanMedianMode,"?"), choices=c("TRUE","FALSE"), 
                                     selected="FALSE",inline = T)
               )
             ),
             div(style="display:inline-block;width:33%;text-align: left;",actionButton("buttonPriorReset", "Reset tPriors"),style=icon("check")),
             div(style="display:inline-block;width:33%;text-align: center;",actionButton("buttonPriorHelp1", "Example"),style=icon("check")),
             div(style="display:inline-block;width:33%;text-align: right;",actionButton("buttonPrior", "Set prior(s)!"),style=icon("check"))
)

